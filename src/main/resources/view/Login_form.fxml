<AnchorPane fx:id="Pane" prefHeight="400.0" prefWidth="600.0" styleClass="loginBackground" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.Controller.LoginFormController">
   <children>
      <Label layoutX="103.0" layoutY="17.0" text="Login" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="134.0" style="-fx-font-weight: 5;" text="User Name" />
      <Label layoutX="46.0" layoutY="192.0" text="Password" />
      <TextField fx:id="txtUserName" layoutX="45.0" layoutY="151.0" opacity="0.4" prefHeight="25.0" prefWidth="191.0" promptText="User name">
         <font>
            <Font size="10.0" />
         </font>
      </TextField>
      <TextField fx:id="txtPassword" layoutX="45.0" layoutY="209.0" opacity="0.4" prefHeight="25.0" prefWidth="191.0" promptText="password" style="-fx-font-family: 12;">
         <font>
            <Font size="10.0" />
         </font>
      </TextField>
      <Button layoutX="45.0" layoutY="279.0" mnemonicParsing="false" onAction="#LoginOnAction" prefHeight="25.0" prefWidth="191.0" style="-fx-background-color: #24a0ed;" text="Login" />
      <CheckBox fx:id="RememberMeOnAction" layoutX="47.0" layoutY="242.0" mnemonicParsing="false" text="Remember Me">
         <font>
            <Font size="10.0" />
         </font>
      </CheckBox>
      <Label layoutX="56.0" layoutY="329.0" text="Don't have an account?" />
      <Hyperlink fx:id="hyperSignUpOnAction" layoutX="180.0" layoutY="326.0" onAction="#SignupOnAction" text="Sign up" />
      <Label layoutX="49.0" layoutY="70.0" text="Welcome" textFill="#f8f7f7">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="51.0" layoutY="93.0" text="Enter your Credentials to access your account" textFill="#f5f4f4" />
      <ImageView fitHeight="400.0" fitWidth="269.0" layoutX="333.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../asstes/img.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
